<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Application Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triangle Checker"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <!-- Input for Angle 1 -->
    <EditText
        android:id="@+id/angle1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:hint="Angle 1"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"/>

    <!-- Input for Angle 2 -->
    <EditText
        android:id="@+id/angle2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/angle1EditText"
        android:hint="Angle 2"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"/>

    <!-- Input for Angle 3 -->
    <EditText
        android:id="@+id/angle3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/angle2EditText"
        android:hint="Angle 3"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"/>

    <!-- Button to Check Angles -->
    <Button
        android:id="@+id/checkAnglesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Angles"
        android:layout_below="@id/angle3EditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
